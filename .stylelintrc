{
  "extends": "stylelint-config-recommended",
  "rules": {
    "at-rule-no-unknown": [ true, {
      "ignoreAtRules": [
        "extends",
        "tailwind",
        "apply",
        "variants",
        "responsive",
        "screen"
      ]
    }],
    "property-no-unknown": [
      true,{
        ignoreProperties: ["font-path"]
      },
    ],
    "block-no-empty": null,
    "unit-whitelist": ["em", "rem", "s", "vh", "vw", "px", "%", "deg", "vmax", "ms"]
  }
}